

<center>
  <%= image_tag(@record.img_big, :class => "img-full-width show-on-small-device") %>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td class="hide-on-small-device">
          <%= image_tag(@record.img_small, width: '160', :class => "hide-on-small-device") %>
        </td>
        <td style="width: 100%">
          <table class="table table-striped">
            <tr>
              <td class="row-title1">
                Titre
              </td>
              <td style="width: 100%">
                <%= @record.nom.html_safe %>  
                <%= @record.nomoriginal.nil? || @record.nomoriginal == "" ? "" : "<br><small><i>(#{@record.nomoriginal})</i></small>".html_safe %>
              </td>
            </tr>
            <tr>
              <td class="row-title1"> 
                Réalisateur
              </td>
              <td>
                <%= @record.realisateur.nil? ? "" : @record.realisateur.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Acteur(s)
              </td>
              <td>
                <%= @record.acteur.nil? ? "" : @record.acteur.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Année
              </td>
              <td>
                <%= @record.annee %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Nationalité
              </td>
              <td>
                <%= @record.nationalite.nil? ? "" : @record.nationalite.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Genre
              </td>
              <td>
                <%= @record.genre.nil? ? "" :  @record.genre.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Durée
              </td>
              <td>
                <%= @record.duree %>
              </td>
            </tr>
            <tr>
              <td class="row-title1">
                Synopsis
              </td>
              <td>
                <%= @record.resume.nil? ? "" : @record.resume.html_safe %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
  <%= image_tag(@record.img_big, :class => "img-full-width hide-on-small-device") %>
  <p>
    &nbsp;
  </p>
  <p>
    &nbsp;
  </p>
</center>








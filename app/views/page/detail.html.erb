

<center>
<div class="show-on-small-device">
  <%= image_tag(@record.img_big, :class => "img-full-width") %>
</div>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td class="hide-on-small-device">
          <%= image_tag(@record.img_small, width: '160') %>
          <% if current_user.try(:admin?) %>
            <%= link_to content_tag(:i, "", class: "glyphicon glyphicon-pencil"), page_edit_path(id: @record.id), :class => "edit-btn btn btn-my2", :method => :get %>
          <% end %>

        </td>
        <td style="width: 100%">
          <table class="table table-striped">
            <tr>
              <td class="my-title1">
                Titre
              </td>
              <td style="width: 100%">
                <%= @record.nom.html_safe %>  
                <%= @record.nomoriginal.nil? || @record.nomoriginal == "" ? "" : "<br><small><i>(#{@record.nomoriginal})</i></small>".html_safe %>
              </td>
            </tr>
            <tr>
              <td class="my-title1"> 
                Réalisateur(s)
              </td>
              <td>
                <%= @record.realisateur.nil? ? "" : @record.realisateur.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Acteur(s)
              </td>
              <td>
                <%= @record.acteur.nil? ? "" : @record.acteur.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Année
              </td>
              <td>
                <%= @record.annee %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Nationalité(s)
              </td>
              <td>
                <%= @record.nationalite.nil? ? "" : @record.nationalite.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Genre(s)
              </td>
              <td>
                <%= @record.genre.nil? ? "" :  @record.genre.html_safe %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Durée
              </td>
              <td>
                <%= @record.duree %>
              </td>
            </tr>
            <tr>
              <td class="my-title1">
                Synopsis
              </td>
              <td>
                <%= @record.resume.nil? ? "" : @record.resume.html_safe %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="show-on-small-device">
    <%= link_to content_tag(:i, "", class: "glyphicon glyphicon-pencil"), page_edit_path(id: @record.id), :class => "edit-btn btn btn-my2", :method => :get %>
  </div>
  <div class="hide-on-small-device">
    <%= image_tag(@record.img_big, :class => "img-full-width") %>
  </div>
  <p>
    &nbsp;
  </p>
  <p>
    &nbsp;
  </p>
</center>







